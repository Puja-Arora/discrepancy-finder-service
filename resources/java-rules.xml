<rules>
	<rule type="text_finder" category = "mandatory">
		<file_pattern value = "*.java"/>
		<text_pattern value = "import java.lang.Compiler;"/>
		<remediation recommendation = "Remove this import" complexity= "1" action = "remove" savings="1"/>
	</rule>
	<rule type="text_finder" category = "optional">
		<file_pattern value = "*.java"/>
		<text_pattern value = "addItem"/>
		<remediation recommendation = "Replace addItem for list with add" complexity= "2" action = "replace" replace_with = "add" condition = "List" savings="2"/>
	</rule>
	<rule type="file_finder" category = "optional">
		<file_pattern value = "*.xml"/>
		<files>
			<file>spring.xml</file>
			<file>applicationContext.xml</file>
		</files>
		<remediation recommendation = "Move from xml based to annotation based configuration" complexity= "10" />
	</rule>
</rules>