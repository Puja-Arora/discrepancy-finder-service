<?xml version="1.0"?>
<rules>
	<rule type="text_find" category = "mandatory">
		<file_pattern value = "*.java"/>
		<text_pattern value = "import java.lang.Compiler;"/>
		<replatform advice = "Remove this import" action = "remove"/>
	</rule>
	<rule type="text_find" category = "optional">
		<complexity value = "2"/>
		<file_pattern value = "*.java"/>
		<text_pattern value = "addItem" condition = "List"/>
		<replatform advice = "Replace addItem for list with item" action = "replace" replace_with = "item" condition = "List"/>
	</rule>
	<rule type="file_find" category = "optional">
		<complexity value = "3"/>
		<file_pattern value = "*.xml"/>
		<files>
			<file>jboss.xml</file>
			<file>jboss-web.xml</file>
		</files>
		<replatform advice = "Move to tomcat" />
	</rule>
</rules>